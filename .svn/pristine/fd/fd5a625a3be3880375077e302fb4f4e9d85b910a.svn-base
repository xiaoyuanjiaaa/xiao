<#assign className = table.className>   
<#assign classNameLower = className?uncap_first> 
<#macro mapperEl value>${r"#{"}${value}}</#macro>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="${basepackage}.dao.mybatis.I${className}Dao">
	<resultMap id="BaseResultMap" type="${basepackage}.model.${className}">
		<#list table.columns as column>
        <id property="${column.columnNameLower}" column="${column.sqlName}"/>
		</#list>
	</resultMap>
	<sql id="Base_Column_List">
	    <![CDATA[
        <#list table.columns as column>
        	${column.sqlName} <#if column_has_next>,</#if>
        </#list>
	    ]]>
	</sql>
	
	 <insert id="insert" >
        INSERT INTO ${table.sqlName} (
        <include refid="Base_Column_List"/>
        ) VALUES (
        <#list table.columns as column>
        	<@mapperEl column.columnNameFirstLower/> <#if column_has_next>,</#if>
        </#list>        
        )
        <selectKey resultType="java.lang.Integer" keyProperty="<#list table.columns as column><#if column.pk>${column.columnNameLower}</#if></#list>" >
            select last_insert_id()
        </selectKey>
    </insert>
    
    <update id="update" >
    <![CDATA[
        UPDATE ${table.sqlName} SET
	        <#list table.notPkColumns as column>
	        ${column.sqlName} = <@mapperEl column.columnNameFirstLower/> <#if column_has_next>,</#if>
	        </#list>
        WHERE 
        	<#list table.compositeIdColumns as column>
	        ${column.sqlName} = <@mapperEl column.columnNameFirstLower/> <#if column_has_next>,</#if>
	        </#list>
    ]]>
    </update>
    
    <delete id="delete">
    <![CDATA[
        DELETE FROM ${table.sqlName} WHERE
        <#list table.compositeIdColumns as column>
        ${column.sqlName} = <@mapperEl column.columnNameFirstLower/> <#if column_has_next>,</#if>
		</#list>
    ]]>
    </delete>
    
    <sql id="findPage_where">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
			      				
	       <#list table.columns as column>
	       <#if column.isDateTimeColumn>
	       <if test="${classNameLower}.${column.columnNameFirstLower}Begin!=null">
				AND ${column.sqlName} >= <@mapperEl classNameLower+"."+column.columnNameFirstLower+"Begin"/>
		   </if>
		   <if test="${classNameLower}.${column.columnNameFirstLower}End!=null">
				AND ${column.sqlName} &lt;= <@mapperEl classNameLower+"."+column.columnNameFirstLower+"End"/>
		   </if>
	       <#else>
	       <if test="${classNameLower}.${column.columnNameFirstLower}!=null">
				AND ${column.sqlName} = <@mapperEl classNameLower+"."+column.columnNameFirstLower/>
			</if>
	       </#if>
	       </#list>			
		
	</sql>
	
	<select id="getCount" resultType="Long">
        SELECT count(*) FROM ${table.sqlName} <where><include refid="findPage_where"/>  </where> 
    </select>
	
	<select id="getById" resultMap="BaseResultMap">
	    SELECT <include refid="Base_Column_List"/>
	    <![CDATA[
	        FROM ${table.sqlName} 
	        WHERE 
				<#list table.compositeIdColumns as column>
		        ${column.sqlName} =  <@mapperEl 'id'/> <#if column_has_next>,</#if>
		        </#list>
	    ]]>
    </select>
	
	 <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="getList" resultMap="BaseResultMap">
    	SELECT <include refid="Base_Column_List"/> FROM ${table.sqlName} 
    	<where>
		<include refid="findPage_where"/>
		</where>
		<if test="sortColumns!=null and sortColumns != '' ">
				ORDER BY  <@mapperEl 'sortColumns'/>
		</if>
		<if test="page.start!=null">
				limit <@mapperEl 'page.start'/>,<@mapperEl 'page.pageSize'/>
		</if>
    </select>

    <#list table.columns as column>
    <#if column.unique && !column.pk>
    <select id="getBy${column.columnName}" resultMap="BaseResultMap" >
	    SELECT <include refid="Base_Column_List"/>
	    <![CDATA[
	        FROM ${table.sqlName} WHERE ${column.sqlName} = #${column.columnNameLower}#
	    ]]>
    </select>
    
    </#if>
	</#list>

</mapper> 